<style>
#event_name, #event_duration, #event_location,
#event_thematic {
    width:202px;
}
#event_typeOfEvent, #event_organizer {
    width:210px;
}
#event_startDate, #event_endDate {
    width:205px;
}
</style>
<table style="border:1px dotted black; background:#f1f1f1;">
{{ form_start(form) }}
    <tr>
        <td>Nom </td>
        <td>{{ form_row(form.name) }}</td>
    </tr>
    <tr>
        <td>Lieu </td>
        <td>{{ form_row(form.location) }}</td>
    </tr>
    <tr>
        <td>Thématique </td>
        <td>{{ form_row(form.thematic) }}</td>
    </tr>
    <tr>
        <td>Date de début </td>
        <td>{{ form_row(form.startDate) }}</td>
    </tr>
    <tr>
        <td>Date de fin </td>
        <td>{{ form_row(form.endDate) }}</td>
    </tr>
    <tr>
        <td>Type d'événement </td>
        <td>{{ form_row(form.typeOfEvent) }}</td>
    </tr>
    <tr>
        <td>Organisateur </td>
        <td>{{ form_row(form.organizer) }}</td>
    </tr>
    <tr>
        <td colspan=2>
            <br>
            <button class="btn" style="width:100%;">{{ button_label|default('Ajouter') }}</button>
        </td>
    </tr>
{{ form_end(form) }}
</table>
