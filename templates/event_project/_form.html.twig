<style>
#event_project_person, #event_project_typeOfEventProject, #event_project_projectStatus {
    width:210px;
}
#event_project_date {
    width:205px;
}
</style>
<table style="border:1px dotted black; background:#f1f1f1;">
{{ form_start(form) }}
    <tr>
        <td >Personne </td>
        <td>{{ form_row(form.person) }}</td>
    </tr>
    <tr>
        <td>Date </td>
        <td>{{ form_row(form.date) }}</td>
    </tr>
    <tr>
        <td>Type d'événement de projet</td>
        <td>{{ form_row(form.typeOfEventProject) }}</td>
    </tr>
    <tr>
        <td>Statut du projet</td>
        <td>{{ form_row(form.projectStatus) }}</td>
    </tr>
    <tr>
        <td colspan=2>
            <br>
            <button class="btn" style="width:100%;">{{ button_label|default('Ajouter') }}</button>
        </td>
    </tr>
{{ form_end(form) }}
</table>
