<style>
#technology_name, #technology_family {
    width:215px;
}
#technology_expert {
    width:223px;
}
</style>
<table style="border:1px dotted black; background:#f1f1f1;">
{{ form_start(form) }}
    <tr>
        <td>Technologie </td>
        <td>{{ form_row(form.name) }}</td>
    </tr>
    <tr>
        <td>Famille </td>
        <td>{{ form_row(form.family) }}</td>
    </tr>
    <tr>
        <td>Expert </td>
        <td>{{ form_row(form.expert) }}</td>
    </tr>
    <tr>
        <td colspan=2>
            <br>
            <button class="btn" style="width:100%;">{{ button_label|default('Ajouter') }}</button>
        </td>
    </tr>
{{ form_end(form) }}
</table>
